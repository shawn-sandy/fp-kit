{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "src",
    "paths": {
      "@*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@utils/*": [
        "src/hooks/*"
      ],
    }
  },
  "include": [
    "src",
    "src/setupTest.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}