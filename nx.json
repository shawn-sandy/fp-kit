  "npmScope": "fp-kit",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "test",
          "lint",
          "package",
          "prepare"
        ],
        "accessToken": "NDI3NDc3OWMtODVjYi00N2Y5LTgzMTItOTQ4ZWMwYmZjNGYxfHJlYWQtd3JpdGU="
      }
    }
  },
  "targetDependencies": {
